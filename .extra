#!/usr/bin/env bash
# Add custom commands

# SYNCED_PATH -s ex DROPBOX_PATH
export SYNCED_PATH="/Users/g.papaeythimiou/SynologyYord"

# Load the .env files from repo
for file in "$HOME/.env"/*.env; do
  # For debugging
  # echo "Env file to load: $file"
	[ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;

# Load the .env files from private path
for file in "${SYNCED_PATH}/private/envs"/*.env; do
  # For debugging
  # echo "Private env file to load: $file"
	[ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;

